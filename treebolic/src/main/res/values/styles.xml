<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BASE application theme, dependent on API level. This theme is replaced by AppBaseTheme from res/values-vXX/styles-app.xml on newer devices. -->
    <style name="CompatAppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- APP theme -->
    <style name="CompatAppTheme" parent="CompatAppBaseTheme">

        <!-- app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>

        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>

        <!-- action bar -->
        <item name="android:actionBarStyle">@style/ActionBar</item>

        <!-- activated background indicator -->
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>

    </style>

    <!-- Action bar -->
    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
    </style>

</resources>